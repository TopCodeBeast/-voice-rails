doctype html
html
  head
    title Wimdu-Voice
    = stylesheet_link_tag 'application', media: 'all'
    = csrf_meta_tags
  body
    video#remoteVideo autoplay='' style='display: none'
    video#localVideo autoplay='' style='display: none'
    = javascript_include_tag 'application'

    pre
      | Login and access mic:
          l = {login: '101', password: '0000'}; phone.app.login(l); phone.app.getAccessToAudio();
        Call an extension:
          phone.app.call('000');
          cid = phone.app.calls[0].id;
        Answer a call (not working yet):
          cid = phone.app.calls[0].id;
          phone.app.answer(cid, false);
        Send some DTMF tones:
          phone.app.sendDTMF(cid, '2');
        Show my login status:
          phone.app.getInfoAboutMe();
        Finally hangup:
          phone.app.hangup(cid);

